{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.2.2.0",
    "parameters": {
        "adminUserName": {
            "metadata": {
                "description": "admin user name for the Virtual Machine."
            },
            "type": "string"
        },
        "adminPassword": {
            "defaultValue": "",
            "metadata": {
                "description": "Password for admin user of the VM"
            },
            "type": "securestring"
        },
        "clusterNodeCount": {
            "defaultValue": 1,
            "metadata": {
                "description": "Number of VM to create"
            },
            "type": "int"
        },
        "deploymentType": {
            "allowedValues": [
                "Standalone",
                "Cluster"
            ],
            "defaultValue": "Cluster",
            "metadata": {
                "description": "deployment type"
            },
            "type": "string"
        },
        "solutionSize": {
            "allowedValues": [
                "Standard_F4s",
                "Standard_F8s",
                "Standard_DS4_v2",
                "Standard_DS5_v2"
            ],
            "defaultValue": "Standard_F4s",
            "metadata": {
                "description": "Size of the VM"
            },
            "type": "string"
        },
        "dnsPrefix": {
            "metadata": {
                "description": "DNS prefix for the VMs. DNS for node would be of form <dnsPrefix>-node0"
            },
            "type": "string"
        },
        "clusterName": {
            "metadata": {
                "description": "Name of the Striim Cluster"
            },
            "type": "string"
        },
        "clusterPassword": {
            "defaultValue": "",
            "metadata": {
                "description": "Password for the Striim cluster"
            },
            "type": "securestring"
        },
        "striimAdminPassword": {
            "defaultvalue": "",
            "metadata": {
                "description": "Password for 'admin' user of Striim."
            },
            "type": "securestring"
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location where resources will be provisioned"
            }
        },
        "baseUrl": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/striim/azure-solution-template/master/",
            "metadata": {
                "description": "The base URL for dependent assets"
            }
        }
    },
    "variables": {
        "imageReference": {
            "offer": "STRIIM_OFFER",
            "publisher": "striim",
            "sku": "v372",
            "version": "latest"
        },
        "companyName": "AzureCompany",
        "nestedTemplateUrl":"[concat(parameters('baseUrl'),'nested/deploymentType',parameters('deploymentType'),'.json')]"
    },
    "resources": [
        {
            "name": "shared-resources",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('baseUrl'), 'nested/sharedResources.json')]",
                    "contentVersion": "1.2.2.0"
                },
                "parameters": {
                    "clusterName":{
                        "value":"[parameters('clusterName')]"
                    },
                    "location": {
                        "value":"[parameters('location')]"
                    } 
                }
            }
        },
        {
            "name": "nestedTemplate",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/shared-resources"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('nestedTemplateUrl')]",
                    "contentVersion": "1.2.2.0"
                },
                "parameters": {
                    "adminUserName":{
                        "value":"[parameters('adminUserName')]"
                    },
                    "adminPassword":{
                        "value":"[parameters('adminPassword')]"
                    },
                    "clusterNodeCount":{
                        "value":"[parameters('clusterNodeCount')]"
                    },
                    "clusterVmSize":{
                        "value":"[parameters('solutionSize')]"
                    },
                    "dnsPrefix":{
                        "value":"[parameters('dnsPrefix')]"
                    },
                    "clusterName":{
                        "value":"[parameters('clusterName')]"
                    },
                    "clusterPassword":{
                        "value":"[parameters('clusterPassword')]"
                    },
                    "striimAdminPassword":{
                        "value":"[parameters('striimAdminPassword')]"
                    },
                    "companyName":{
                        "value":"[variables('companyName')]"
                    },
                    "imageReference": {
                        "value": "[variables('imageReference')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "baseUrl": {
                        "value": "[parameters('baseUrl')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "serverPublicEndpoint": {
            "type": "string",
            "value": "[concat('http://',parameters('dnsPrefix'),':9080/')]"
        }
    }
}
